@page
@model CampusEvents.Pages.Student.BecomeDriverModel
@{
    ViewData["Title"] = Model.IsEdit ? "Edit Driver Profile" : "Become a Driver";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Capacity" class="form-label">Passenger Capacity</label>
                            <input asp-for="Capacity" class="form-control" type="number" min="1" max="50" required />
                            <div class="form-text">How many passengers can you take? (excluding yourself)</div>
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="VehicleType" class="form-label">Vehicle Type</label>
                            <select asp-for="VehicleType" class="form-select" required>
                                <option value="">-- Select Vehicle Type --</option>
                                <option value="Mini">Mini</option>
                                <option value="Sedan">Sedan</option>
                                <option value="SUV">SUV</option>
                                <option value="Van">Van</option>
                                <option value="Bus">Bus</option>
                            </select>
                            <span asp-validation-for="VehicleType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LicensePlate" class="form-label">License Plate (Optional)</label>
                            <input asp-for="LicensePlate" class="form-control" placeholder="ABC 1234" />
                            <span asp-validation-for="LicensePlate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Accessibility Features</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="AccessibilityFeatures" value="wheelchair_accessible" id="wheelchair">
                                <label class="form-check-label" for="wheelchair">
                                    Wheelchair Accessible
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="AccessibilityFeatures" value="service_animal_friendly" id="service_animal">
                                <label class="form-check-label" for="service_animal">
                                    Service Animal Friendly
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="AccessibilityFeatures" value="hearing_assistance" id="hearing">
                                <label class="form-check-label" for="hearing">
                                    Hearing Assistance Available
                                </label>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <h6>Important:</h6>
                            <ul class="mb-0">
                                <li>Your driver profile will be pending until approved by an administrator</li>
                                <li>You can start offering rides once approved</li>
                                <li>Make sure your vehicle information is accurate</li>
                            </ul>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/Student/Carpools" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                @(Model.IsEdit ? "Update Profile" : "Register as Driver")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
