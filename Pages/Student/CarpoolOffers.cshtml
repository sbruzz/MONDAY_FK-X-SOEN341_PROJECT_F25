@page "{eventId:int}"
@model CampusEvents.Pages.Student.CarpoolOffersModel
@{
    ViewData["Title"] = "Available Carpools";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Student/Events">Events</a></li>
            <li class="breadcrumb-item"><a href="/Student/EventDetails?id=@Model.EventId">Event Details</a></li>
            <li class="breadcrumb-item active">Carpools</li>
        </ol>
    </nav>

    @if (Model.Event != null)
    {
        <div class="card mb-4">
            <div class="card-body">
                <h3>@Model.Event.Title</h3>
                <p class="text-muted mb-0">
                    <i class="bi bi-calendar"></i> @Model.Event.EventDate.ToString("MMMM dd, yyyy HH:mm")
                    <br />
                    <i class="bi bi-geo-alt"></i> @Model.Event.Location
                </p>
            </div>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>Available Carpools (@Model.Offers.Count)</h4>
        @if (Model.CanOfferRide)
        {
            <a href="/Student/OfferRide?eventId=@Model.EventId" class="btn btn-success">
                <i class="bi bi-car-front"></i> Offer a Ride
            </a>
        }
    </div>

    @if (Model.Offers.Any())
    {
        <div class="row">
            @foreach (var offer in Model.Offers)
            {
                <div class="col-md-6 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h5 class="card-title mb-1">
                                        <i class="bi bi-person-circle"></i> @offer.Driver.User.Name
                                    </h5>
                                    <span class="badge bg-@(offer.Status == CampusEvents.Models.CarpoolOfferStatus.Active ? "success" : "secondary")">
                                        @offer.Status
                                    </span>
                                </div>
                                <div class="text-end">
                                    <h5 class="text-primary mb-0">@offer.SeatsAvailable</h5>
                                    <small class="text-muted">seats left</small>
                                </div>
                            </div>

                            <hr />

                            <p class="mb-2">
                                <strong><i class="bi bi-car-front"></i> Vehicle:</strong> @offer.Driver.VehicleType
                                <span class="text-muted">(Capacity: @offer.Driver.Capacity)</span>
                            </p>

                            <p class="mb-2">
                                <strong><i class="bi bi-clock"></i> Departure:</strong> @offer.DepartureTime.ToString("HH:mm")
                            </p>

                            <p class="mb-2">
                                <strong><i class="bi bi-info-circle"></i> Info:</strong> @offer.DepartureInfo
                            </p>

                            @if (!string.IsNullOrEmpty(offer.DepartureAddress))
                            {
                                <p class="mb-2">
                                    <strong><i class="bi bi-geo-alt"></i> Location:</strong> @offer.DepartureAddress
                                </p>
                            }

                            @if (!string.IsNullOrEmpty(offer.Driver.AccessibilityFeatures))
                            {
                                <p class="mb-2 text-success">
                                    <small><i class="bi bi-universal-access"></i> @offer.Driver.AccessibilityFeatures.Replace(",", ", ")</small>
                                </p>
                            }

                            <p class="mb-0">
                                <strong>Passengers:</strong>
                                <small class="text-muted">
                                    @offer.Passengers.Count(p => p.Status == CampusEvents.Models.PassengerStatus.Confirmed) confirmed
                                </small>
                            </p>

                            @if (offer.Status == CampusEvents.Models.CarpoolOfferStatus.Active && offer.SeatsAvailable > 0)
                            {
                                <hr />
                                <button type="button" class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#joinModal-@offer.Id">
                                    Join This Ride
                                </button>

                                <!-- Join Modal -->
                                <div class="modal fade" id="joinModal-@offer.Id" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <form method="post" asp-page-handler="JoinRide">
                                                <input type="hidden" name="offerId" value="@offer.Id" />
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Join Carpool</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="mb-3">
                                                        <label class="form-label">Pickup Location (Optional)</label>
                                                        <input type="text" name="pickupLocation" class="form-control" placeholder="e.g., Corner of Main St and 5th Ave" />
                                                        <div class="form-text">Where should the driver pick you up?</div>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">Notes (Optional)</label>
                                                        <textarea name="notes" class="form-control" rows="2" placeholder="Any additional information for the driver"></textarea>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-primary">Confirm Join</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                            else if (offer.Status == CarpoolOfferStatus.Full)
                            {
                                <hr />
                                <button class="btn btn-secondary w-100" disabled>Ride Full</button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-secondary text-center">
            <h5>No Carpool Offers Yet</h5>
            <p>Be the first to offer a ride for this event!</p>
            @if (Model.CanOfferRide)
            {
                <a href="/Student/OfferRide?eventId=@Model.EventId" class="btn btn-success">
                    <i class="bi bi-car-front"></i> Offer a Ride
                </a>
            }
            else
            {
                <p class="text-muted">
                    <small>Want to offer rides? <a href="/Student/BecomeDriver">Become a driver</a></small>
                </p>
            }
        </div>
    }
</div>
