@page
@model CampusEvents.Pages.Organizer.RoomsModel
@{
    ViewData["Title"] = "My Rooms";
    Layout = "_OrganizerLayout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-door-open"></i> My Rooms</h1>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createRoomModal">
            <i class="bi bi-plus-circle"></i> Create Room
        </button>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">My Rooms</h5>
                    <h2>@Model.MyRooms.Count</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title">Pending Requests</h5>
                    <h2>@Model.PendingRentals.Count</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Rentals</h5>
                    <h2>@Model.MyRooms.Sum(r => r.Rentals.Count)</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Rental Requests -->
    @if (Model.PendingRentals.Any())
    {
        <div class="card mb-4">
            <div class="card-header bg-warning">
                <h5 class="mb-0"><i class="bi bi-clock-history"></i> Pending Rental Requests (@Model.PendingRentals.Count)</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Room</th>
                                <th>Renter</th>
                                <th>Time</th>
                                <th>Purpose</th>
                                <th>Attendees</th>
                                <th>Cost</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rental in Model.PendingRentals)
                            {
                                <tr>
                                    <td><strong>@rental.Room.Name</strong></td>
                                    <td>
                                        @rental.Renter.Name<br />
                                        <small class="text-muted">@rental.Renter.Email</small>
                                    </td>
                                    <td>
                                        @rental.StartTime.ToString("MMM dd, HH:mm")<br />
                                        <small class="text-muted">to @rental.EndTime.ToString("HH:mm")</small>
                                    </td>
                                    <td>@rental.Purpose</td>
                                    <td>@(rental.ExpectedAttendees?.ToString() ?? "-")</td>
                                    <td>
                                        @if (rental.TotalCost.HasValue)
                                        {
                                            <span class="text-success">$@rental.TotalCost.Value.ToString("F2")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Free</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <form method="post" asp-page-handler="ApproveRental" class="d-inline">
                                                <input type="hidden" name="rentalId" value="@rental.Id" />
                                                <button type="submit" class="btn btn-success" title="Approve">
                                                    <i class="bi bi-check-circle"></i>
                                                </button>
                                            </form>
                                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal-@rental.Id" title="Reject">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        </div>

                                        <!-- Reject Modal -->
                                        <div class="modal fade" id="rejectModal-@rental.Id" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <form method="post" asp-page-handler="RejectRental">
                                                        <input type="hidden" name="rentalId" value="@rental.Id" />
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Reject Rental Request</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <p>Reject rental request from <strong>@rental.Renter.Name</strong> for <strong>@rental.Room.Name</strong>?</p>
                                                            <div class="mb-3">
                                                                <label class="form-label">Reason (optional)</label>
                                                                <textarea name="reason" class="form-control" rows="2" placeholder="Reason for rejection..."></textarea>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                            <button type="submit" class="btn btn-danger">Reject Request</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <!-- My Rooms -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-building"></i> My Rooms (@Model.MyRooms.Count)</h5>
        </div>
        <div class="card-body">
            @if (Model.MyRooms.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Room</th>
                                <th>Capacity</th>
                                <th>Rate</th>
                                <th>Status</th>
                                <th>Availability</th>
                                <th>Rentals</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var room in Model.MyRooms)
                            {
                                <tr>
                                    <td>
                                        <strong>@room.Name</strong><br />
                                        <small class="text-muted"><i class="bi bi-geo-alt"></i> @room.Address</small>
                                    </td>
                                    <td>@room.Capacity</td>
                                    <td>
                                        @if (room.HourlyRate.HasValue)
                                        {
                                            <span class="text-success">$@room.HourlyRate.Value.ToString("F2")/hr</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Free</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-@(room.Status == CampusEvents.Models.RoomStatus.Enabled ? "success" : "danger")">
                                            @room.Status
                                        </span>
                                    </td>
                                    <td>
                                        @if (room.AvailabilityStart.HasValue && room.AvailabilityEnd.HasValue)
                                        {
                                            <small>@room.AvailabilityStart.Value.ToString("MMM dd") - @room.AvailabilityEnd.Value.ToString("MMM dd, yyyy")</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Always</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@room.Rentals.Count total</span><br />
                                        <small class="text-muted">
                                            @room.Rentals.Count(r => r.Status == CampusEvents.Models.RentalStatus.Pending) pending
                                        </small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-door-open" style="font-size: 3rem; color: var(--text-light);"></i>
                    <h5 class="mt-3">No Rooms Yet</h5>
                    <p class="text-muted">Create your first room to start accepting rental requests</p>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createRoomModal">
                        <i class="bi bi-plus-circle"></i> Create Room
                    </button>
                </div>
            }
        </div>
    </div>

    <!-- All Rentals Details -->
    <div class="card mt-4">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0"><i class="bi bi-calendar-check"></i> All Rentals - Detailed View</h5>
        </div>
        <div class="card-body">
            @if (Model.MyRooms.Any(r => r.Rentals.Any()))
            {
                @foreach (var room in Model.MyRooms.Where(r => r.Rentals.Any()))
                {
                    <div class="mb-4">
                        <h6 class="border-bottom pb-2">
                            <i class="bi bi-door-open"></i> <strong>@room.Name</strong>
                            <small class="text-muted">(@room.Address)</small>
                        </h6>
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Renter</th>
                                        <th>Date & Time</th>
                                        <th>Purpose</th>
                                        <th>Status</th>
                                        <th>Attendees</th>
                                        <th>Cost</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var rental in room.Rentals.OrderBy(r => r.StartTime))
                                    {
                                        <tr class="@(rental.Status == CampusEvents.Models.RentalStatus.Pending ? "table-warning" : "")">
                                            <td>
                                                <strong>@rental.Renter.Name</strong><br />
                                                <small class="text-muted">@rental.Renter.Email</small>
                                            </td>
                                            <td>
                                                <strong>@rental.StartTime.ToString("MMM dd, yyyy")</strong><br />
                                                <small>@rental.StartTime.ToString("h:mm tt") - @rental.EndTime.ToString("h:mm tt")</small><br />
                                                <small class="text-muted">(@((rental.EndTime - rental.StartTime).TotalHours.ToString("F1")) hours)</small>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(rental.Purpose))
                                                {
                                                    @rental.Purpose
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (rental.Status == CampusEvents.Models.RentalStatus.Approved)
                                                {
                                                    <span class="badge bg-success">Approved</span>
                                                }
                                                else if (rental.Status == CampusEvents.Models.RentalStatus.Pending)
                                                {
                                                    <span class="badge bg-warning text-dark">Pending</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Rejected</span>
                                                }
                                            </td>
                                            <td>
                                                @if (rental.ExpectedAttendees.HasValue && rental.ExpectedAttendees > 0)
                                                {
                                                    @rental.ExpectedAttendees
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (rental.TotalCost.HasValue && rental.TotalCost > 0)
                                                {
                                                    <span class="text-success">$@rental.TotalCost.Value.ToString("F2")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Free</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-4">
                    <i class="bi bi-calendar-x" style="font-size: 2rem; color: var(--text-light);"></i>
                    <p class="text-muted mt-2 mb-0">No rentals yet</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Create Room Modal -->
<div class="modal fade" id="createRoomModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" asp-page-handler="CreateRoom">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-plus-circle"></i> Create New Room</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Room Name <span class="text-danger">*</span></label>
                            <input type="text" name="name" class="form-control" required placeholder="e.g., Main Conference Room" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Address <span class="text-danger">*</span></label>
                            <input type="text" name="address" class="form-control" required placeholder="e.g., Building H, Room 123" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Capacity <span class="text-danger">*</span></label>
                            <input type="number" name="capacity" class="form-control" required min="1" placeholder="e.g., 30" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Hourly Rate</label>
                            <input type="number" name="hourlyRate" class="form-control" step="0.01" min="0" placeholder="Leave blank for free" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Amenities</label>
                            <input type="text" name="amenities" class="form-control" placeholder="e.g., Projector, Whiteboard" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Availability Start</label>
                            <input type="datetime-local" name="availabilityStart" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Availability End</label>
                            <input type="datetime-local" name="availabilityEnd" class="form-control" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Room Info</label>
                            <textarea name="roomInfo" class="form-control" rows="3" placeholder="Additional information about the room..."></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create Room
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
