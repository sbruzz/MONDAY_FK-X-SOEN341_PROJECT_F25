@page
@model OrganizerHomeModel
@{
    ViewData["Title"] = "Organizer Home";
}

<div class="container mt-4">
    <h1>Welcome, @Model.UserName!</h1>
    <p class="lead">Manage your events and track engagement</p>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Create Event</h5>
                    <p class="card-text">Organize a new campus event</p>
                    <a href="/Organizer/CreateEvent" class="btn btn-primary">Create Event</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">My Events</h5>
                    <p class="card-text">View and manage your events</p>
                    <a href="/Organizer/Events" class="btn btn-primary">My Events</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Analytics</h5>
                    <p class="card-text">View event statistics</p>
                    <a href="/Organizer/Analytics" class="btn btn-primary">View Analytics</a>
                </div>
            </div>
        </div>
    </div>
</div>
