@page
@model CampusEvents.Pages.Organizer.EventsModel
@{
    ViewData["Title"] = "My Events";
    Layout = "_OrganizerLayout";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4"><i class="bi bi-calendar-check"></i> My Events</h1>
            <p class="lead">Manage your organized events</p>
        </div>
        <div class="col-auto">
            <a href="/Organizer/CreateEvent" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Create New Event
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-primary">@Model.TotalEvents</h3>
                    <p class="text-muted mb-0">Total Events</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-warning">@Model.PendingEvents</h3>
                    <p class="text-muted mb-0">Pending Approval</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-success">@Model.ApprovedEvents</h3>
                    <p class="text-muted mb-0">Approved</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-info">@Model.TotalTicketsIssued</h3>
                    <p class="text-muted mb-0">Total Tickets</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Tabs -->
    <div class="tab-scroll mb-4">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link @(Model.StatusFilter == "all" ? "active" : "")" href="?statusfilter=all">
                    All Events (@Model.Events.Count)
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(Model.StatusFilter == "pending" ? "active" : "")" href="?statusfilter=pending">
                    Pending (@Model.PendingEvents)
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(Model.StatusFilter == "approved" ? "active" : "")" href="?statusfilter=approved">
                    Approved (@Model.ApprovedEvents)
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(Model.StatusFilter == "rejected" ? "active" : "")" href="?statusfilter=rejected">
                    Rejected (@Model.RejectedEvents)
                </a>
            </li>
        </ul>
    </div>

    <!-- Events List -->
    @if (!Model.Events.Any())
    {
        <div class="card text-center py-5">
            <div class="card-body">
                <i class="bi bi-calendar-x display-1 text-muted"></i>
                <h3 class="mt-3">No Events Found</h3>
                <p class="text-muted">
                    @if (Model.StatusFilter == "all")
                    {
                        <text>You haven't created any events yet.</text>
                    }
                    else
                    {
                        <text>No events with @Model.StatusFilter status.</text>
                    }
                </p>
                <a href="/Organizer/CreateEvent" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle"></i> Create Your First Event
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var evt in Model.Events)
            {
                var isPastEvent = evt.EventDate < DateTime.UtcNow;
                var percentFull = evt.Capacity > 0 ? (evt.TicketsIssued * 100.0 / evt.Capacity) : 0;

                <div class="col-lg-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header @(evt.ApprovalStatus == ApprovalStatus.Approved ? "bg-success" : evt.ApprovalStatus == ApprovalStatus.Rejected ? "bg-danger" : "bg-warning") text-white">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h5 class="mb-0">@evt.Title</h5>
                                </div>
                                <div class="col-auto">
                                    @if (evt.ApprovalStatus == ApprovalStatus.Pending)
                                    {
                                        <span class="badge bg-light text-dark">
                                            <i class="bi bi-clock"></i> Pending Approval
                                        </span>
                                    }
                                    else if (evt.ApprovalStatus == ApprovalStatus.Approved)
                                    {
                                        <span class="badge bg-light text-dark">
                                            <i class="bi bi-check-circle"></i> Approved
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-dark">
                                            <i class="bi bi-x-circle"></i> Rejected
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <!-- Event Info -->
                            <div class="mb-3">
                                <span class="badge bg-info">@evt.Category</span>
                                @if (isPastEvent)
                                {
                                    <span class="badge bg-secondary ms-1">Past Event</span>
                                }
                                @if (evt.Price == 0)
                                {
                                    <span class="badge bg-success ms-1">FREE</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary ms-1">$@evt.Price.ToString("F2")</span>
                                }
                            </div>

                            <!-- Date/Time -->
                            <p class="mb-2">
                                <i class="bi bi-calendar-event text-primary"></i>
                                <strong>@evt.EventDate.ToString("MMMM dd, yyyy")</strong> at @evt.EventDate.ToString("h:mm tt")
                            </p>

                            <!-- Location -->
                            <p class="mb-2">
                                <i class="bi bi-geo-alt text-primary"></i>
                                @evt.Location
                            </p>

                            <!-- Organization -->
                            @if (evt.Organization != null)
                            {
                                <p class="mb-3">
                                    <i class="bi bi-building text-primary"></i>
                                    @evt.Organization.Name
                                </p>
                            }

                            <!-- Tickets Stats -->
                            <div class="mb-2">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <small><strong>Tickets Issued:</strong></small>
                                    <small><strong>@evt.TicketsIssued / @evt.Capacity</strong></small>
                                </div>
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar @(percentFull >= 90 ? "bg-danger" : percentFull >= 70 ? "bg-warning" : "bg-success")"
                                         style="width: @percentFull%"></div>
                                </div>
                                <small class="text-muted">@percentFull.ToString("F1")% full</small>
                            </div>

                            <!-- Created Date -->
                            <p class="text-muted small mb-0">
                                Created: @evt.CreatedAt.ToString("MMM dd, yyyy")
                            </p>
                        </div>
                        <div class="card-footer bg-white">
                            <div class="row g-2">
                                @if (evt.ApprovalStatus == ApprovalStatus.Approved)
                                {
                                    <div class="col-md-6">
                                        <a href="/Organizer/EventDetails?id=@evt.Id" class="btn btn-primary btn-sm w-100">
                                            <i class="bi bi-bar-chart"></i> Analytics
                                        </a>
                                    </div>
                                    <div class="col-md-6">
                                        <a href="/Organizer/QRScanner?eventId=@evt.Id" class="btn btn-outline-primary btn-sm w-100">
                                            <i class="bi bi-qr-code-scan"></i> Scan QR
                                        </a>
                                    </div>
                                }
                                else if (evt.ApprovalStatus == ApprovalStatus.Pending)
                                {
                                    <div class="col-12">
                                        <button class="btn btn-outline-secondary btn-sm w-100" disabled>
                                            <i class="bi bi-clock"></i> Awaiting Admin Approval
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-12">
                                        <button class="btn btn-outline-danger btn-sm w-100" disabled>
                                            <i class="bi bi-x-circle"></i> Event Rejected
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Styles {
    <style>
        /* Responsive tab scrolling */
        .tab-scroll {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        .tab-scroll .nav-tabs {
            flex-wrap: nowrap;
            gap: 0.25rem;
            border-bottom: 1px solid #dee2e6;
        }

        .tab-scroll .nav-link {
            white-space: nowrap;
        }

        .tab-scroll::-webkit-scrollbar {
            height: 6px;
        }

        .tab-scroll::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        .tab-scroll::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 3px;
        }

        .tab-scroll::-webkit-scrollbar-thumb:hover {
            background: #555;
        }
    </style>
}
