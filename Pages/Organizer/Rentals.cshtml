@page
@model RentalsModel
@{
    ViewData["Title"] = "Room Rentals";
    Layout = "_OrganizerLayout";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Organizer/Home">Home</a></li>
            <li class="breadcrumb-item active">Room Rentals</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-door-open"></i> Room Rentals</h1>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#requestRentalModal">
            <i class="bi bi-plus-circle"></i> Request Room Rental
        </button>
    </div>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-list-check"></i> My Rentals</h5>
        </div>
        <div class="card-body">
            @if (Model.MyRentals.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Room</th>
                                <th>Location</th>
                                <th>Date & Time</th>
                                <th>Purpose</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rental in Model.MyRentals)
                            {
                                <tr>
                                    <td><strong>@rental.Room.Name</strong></td>
                                    <td>@rental.Room.Location</td>
                                    <td>
                                        @rental.StartTime.ToString("MMM dd, yyyy")<br>
                                        <small>@rental.StartTime.ToString("h:mm tt") - @rental.EndTime.ToString("h:mm tt")</small>
                                    </td>
                                    <td>@(rental.Purpose ?? "N/A")</td>
                                    <td>
                                        @if (rental.Status == RentalStatus.Approved)
                                        {
                                            <span class="badge bg-success">Rented</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@rental.Status</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">You don't have any room rentals yet.</p>
            }
        </div>
    </div>
</div>

<!-- Request Rental Modal -->
<div class="modal fade" id="requestRentalModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="bi bi-plus-circle"></i> Request Room Rental</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="RentalInput.RoomId" class="form-label">
                            Room <span class="text-danger">*</span>
                        </label>
                        <select asp-for="RentalInput.RoomId" class="form-select" required>
                            <option value="">Select a room...</option>
                            @foreach (var room in Model.AvailableRooms)
                            {
                                <option value="@room.Id">@room.Name - @room.Location</option>
                            }
                        </select>
                        <span asp-validation-for="RentalInput.RoomId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="RentalInput.StartTime" class="form-label">
                            Start Time <span class="text-danger">*</span>
                        </label>
                        <input type="datetime-local" asp-for="RentalInput.StartTime" class="form-control" required />
                        <span asp-validation-for="RentalInput.StartTime" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="RentalInput.EndTime" class="form-label">
                            End Time <span class="text-danger">*</span>
                        </label>
                        <input type="datetime-local" asp-for="RentalInput.EndTime" class="form-control" required />
                        <span asp-validation-for="RentalInput.EndTime" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="RentalInput.Purpose" class="form-label">Purpose (Optional)</label>
                        <textarea asp-for="RentalInput.Purpose" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Request Rental</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

