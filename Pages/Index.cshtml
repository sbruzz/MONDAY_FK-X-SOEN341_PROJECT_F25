</div>

<style>
    :root {
        --isabelline: #edede9;
        --timberwolf: #d6ccc2;
        --linen: #f5ebe0;
        --champagne-pink: #e3d5ca;
        --pale-dogwood: #d5bdaf;
        --text-dark: #3d3d3d;
        --text-light: #6b6b6b;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .landing-page {
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        color: var(--text-dark);
        width: 100%;
        overflow-x: hidden;
    }

    /* Hero Section */
    .hero-section {
        background: white;
        padding: 120px 5% 100px;
        position: relative;
        overflow: hidden;
        width: 100%;
    }

    .hero-section .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0;
    }

    .hero-title {
        font-size: 4rem;
        font-weight: 800;
        line-height: 1.1;
        color: var(--text-dark);
        margin-bottom: 1.5rem;
        letter-spacing: -0.02em;
    }

    .hero-subtitle {
        font-size: 1.35rem;
        color: var(--text-light);
        margin-bottom: 2.5rem;
        line-height: 1.7;
        max-width: 600px;
    }

    .hero-cta .btn {
        padding: 1.125rem 2.75rem;
        font-weight: 600;
        border-radius: 12px;
        transition: all 0.3s ease;
        font-size: 1.125rem;
    }

    .btn-primary {
        background: var(--pale-dogwood);
        border: none;
        color: white;
    }

    .btn-primary:hover {
        background: var(--timberwolf);
        transform: translateY(-2px);
        box-shadow: 0 12px 24px rgba(213, 189, 175, 0.4);
        color: white;
    }

    .btn-outline {
        background: white;
        border: 2px solid var(--pale-dogwood);
        color: var(--text-dark);
    }

    .btn-outline:hover {
        background: var(--pale-dogwood);
        color: white;
        border-color: var(--pale-dogwood);
    }

    .btn-outline-primary {
        background: transparent;
        border: 2px solid var(--pale-dogwood);
        color: var(--pale-dogwood);
    }

    .btn-outline-primary:hover {
        background: var(--pale-dogwood);
        color: white;
        border-color: var(--pale-dogwood);
    }

    .hero-stats {
        display: flex;
        gap: 3rem;
    }

