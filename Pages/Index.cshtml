@page
@model IndexModel
@{
    ViewData["Title"] = "Campus Events & Ticketing";
}

<div class="landing-page">
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="hero-title">Transform Your Campus Event Experience</h1>
                    <p class="hero-subtitle">The complete platform for discovering, organizing, and managing campus events. Built for students, organizers, and administrators.</p>
                    <div class="hero-cta">
                        <a href="/Login" class="btn btn-primary btn-lg me-3">Get Started</a>
                        <a href="/Events" class="btn btn-outline btn-lg">Browse Events</a>
                    </div>                    <div class="hero-stats mt-5">
                        <div class="stat-item">
                            <span class="stat-number">500+</span>
                            <span class="stat-label">Active Events</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">10K+</span>
                            <span class="stat-label">Students</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">50+</span>
                            <span class="stat-label">Organizations</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="hero-image">
                        <div class="floating-card card-1">
                            <div class="card-icon">🎭</div>
                            <div class="card-content">
                                <h4>Theater Night</h4>
                                <p>150 tickets available</p>
                            </div>
                        </div>
                        <div class="floating-card card-2">
                            <div class="card-icon">🎵</div>
                            <div class="card-content">
                                <h4>Live Concert</h4>
                                <p>Sold out</p>
                            </div>
                        </div>
                        <div class="floating-card card-3">
                            <div class="card-icon">🏀</div>
                            <div class="card-content">
                                <h4>Basketball Game</h4>
                                <p>Free admission</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Overview -->
    <section class="features-overview" id="features">
        <div class="container">
            <div class="section-header text-center mb-5">
                <span class="section-tag">What We Offer</span>
                <h2 class="section-title">Everything You Need in One Platform</h2>
                <p class="section-description">Streamline your campus event experience with our comprehensive suite of tools</p>
            </div>
            <div class="row g-4">
                <div class="col-md-6 col-lg-3">
                    <div class="feature-box">
                        <div class="feature-icon">🔍</div>
                        <h3>Smart Discovery</h3>
                        <p>Find events tailored to your interests with advanced filters and search</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="feature-box">
                        <div class="feature-icon">🎫</div>
                        <h3>Instant Ticketing</h3>
                        <p>Claim tickets instantly with digital QR codes for seamless check-in</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="feature-box">
                        <div class="feature-icon">📊</div>
                        <h3>Real-time Analytics</h3>
                        <p>Track attendance, engagement, and ticket sales in real-time</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="feature-box">
                        <div class="feature-icon">🔐</div>
                        <h3>Secure Platform</h3>
                        <p>Role-based access control ensures data security and privacy</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Browse Events Section -->
    <section class="browse-events-section" id="events">
        <div class="container">
            <div class="section-header text-center mb-5">
                <span class="section-tag">Discover Events</span>
                <h2 class="section-title">Explore Upcoming Campus Events</h2>
                <p class="section-description">Browse events, search by keyword, or filter by category</p>
            </div>

            <!-- Search & Filter Bar -->
            <form method="get" class="search-filter-bar mb-5">
                <div class="row g-3 align-items-end">
                    <div class="col-md-6">
                        <label for="search" class="form-label">Search Events</label>
                        <input type="text" id="search" name="SearchTerm" value="@Model.SearchTerm"
                               class="form-control form-control-lg" placeholder="Search by title, description, or location...">
                    </div>
                    <div class="col-md-4">
                        <label for="category" class="form-label">Category</label>
                        <select id="category" name="CategoryFilter" class="form-select form-select-lg" asp-for="CategoryFilter">
                            <option value="All">All Categories</option>
                            <option value="Academic">Academic</option>
                            <option value="Career">Career</option>
                            <option value="Competition">Competition</option>
                            <option value="Concert">Concert</option>
                            <option value="Cultural">Cultural</option>
                            <option value="Social">Social</option>
                            <option value="Sports">Sports</option>
                            <option value="Workshop">Workshop</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary btn-lg w-100">Search</button>
                    </div>
                </div>
            </form>

            @if (Model.FeaturedEvents.Any())
            {
                <!-- Featured Events -->
                <div class="featured-events mb-5">
                    <h3 class="mb-4" style="font-size: 1.75rem; font-weight: 700;">Featured Events</h3>
                    <div class="row g-4">
                        @foreach (var evt in Model.FeaturedEvents)
                        {
                            <div class="col-md-4">
                                <div class="event-card featured">
                                    <div class="event-card-header">
                                        <span class="event-category-badge">@evt.Category</span>
                                        @if (evt.TicketsIssued >= evt.Capacity * 0.8)
                                        {
                                            <span class="badge bg-warning text-dark">Almost Full</span>
                                        }
                                    </div>
                                    <h4 class="event-card-title">@evt.Title</h4>
                                    <p class="event-card-description">@(evt.Description.Length > 100 ? evt.Description.Substring(0, 100) + "..." : evt.Description)</p>
                                    <div class="event-card-meta">
                                        <div class="meta-item">
                                            <i class="bi bi-calendar-event"></i>
                                            @evt.EventDate.ToString("MMM dd, yyyy")
                                        </div>
                                        <div class="meta-item">
                                            <i class="bi bi-clock"></i>
                                            @evt.EventDate.ToString("h:mm tt")
                                        </div>
                                        <div class="meta-item">
                                            <i class="bi bi-geo-alt"></i>
                                            @evt.Location
                                        </div>
                                        @if (evt.Organization != null)
                                        {
                                            <div class="meta-item">
                                                <i class="bi bi-building"></i>
                                                @evt.Organization.Name
                                            </div>
                                        }
                                    </div>
                                    <div class="event-card-footer">
                                        <div class="capacity-info">
                                            <span class="capacity-text">@evt.TicketsIssued / @evt.Capacity tickets</span>
                                            <div class="capacity-bar">
                                                <div class="capacity-fill" style="width: @((evt.TicketsIssued * 100.0 / evt.Capacity).ToString("F0"))%"></div>
                                            </div>
                                        </div>
                                        <a href="/Student/EventDetails?id=@evt.Id" class="btn btn-primary mt-3 w-100">View Details</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Upcoming Events Grid -->
            @if (Model.UpcomingEvents.Any())
            {
                <div class="upcoming-events">
                    <h3 class="mb-4" style="font-size: 1.75rem; font-weight: 700;">
                        @if (!string.IsNullOrWhiteSpace(Model.SearchTerm) || !string.IsNullOrWhiteSpace(Model.CategoryFilter))
                        {
                            <span>Search Results</span>
                        }
                        else
                        {
                            <span>All Upcoming Events</span>
                        }
                    </h3>
                    <div class="row g-4">
                        @foreach (var evt in Model.UpcomingEvents)
                        {
                            <div class="col-md-4 col-lg-3">
                                <div class="event-card compact">
                                    <div class="event-card-header">
                                        <span class="event-category-badge-small">@evt.Category</span>
                                    </div>
                                    <h5 class="event-card-title-small">@evt.Title</h5>
                                    <div class="event-card-meta-compact">
                                        <div class="meta-item-small">
                                            <i class="bi bi-calendar3"></i>
                                            @evt.EventDate.ToString("MMM dd")
                                        </div>
                                        <div class="meta-item-small">
                                            <i class="bi bi-geo-alt-fill"></i>
                                            @(evt.Location.Length > 20 ? evt.Location.Substring(0, 20) + "..." : evt.Location)
                                        </div>
                                    </div>
                                    <div class="event-price-badge">
                                        @if (evt.Price == 0)
                                        {
                                            <span class="badge bg-success">FREE</span>
                                        }
                                        else
                                        {
                                            <span class="badge" style="background: #d5bdaf; color: white;">$@evt.Price.ToString("F2")</span>
                                        }
                                    </div>
                                    <a href="/Student/EventDetails?id=@evt.Id" class="btn btn-outline-primary btn-sm w-100 mt-2">Details</a>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="text-center mt-5">
                        <a href="/Events" class="btn btn-primary btn-lg">View All Events</a>
                    </div>
                </div>
            }
            else if (!string.IsNullOrWhiteSpace(Model.SearchTerm) || !string.IsNullOrWhiteSpace(Model.CategoryFilter))
            {
                <div class="alert alert-info text-center">
                    <h5>No events found matching your search criteria</h5>
                    <p>Try adjusting your filters or search terms</p>
                    <a href="/" class="btn btn-primary">Clear Filters</a>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center">
                    <h5>No upcoming events at the moment</h5>
                    <p>Check back soon for new events!</p>
                </div>
            }
        </div>
    </section>

