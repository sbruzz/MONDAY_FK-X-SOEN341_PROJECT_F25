@page
@model SignupOrganizerModel
@{
    ViewData["Title"] = "Organizer Signup";
}

<style>
    :root {
        --primary: #90b494;
        --primary-dark: #7a9d7e;
        --bg: #f5ebe0;
        --card-bg: #ffffff;
        --text: #3d3d3d;
        --text-light: #6b6b6b;
        --border: #e3d5ca;
    }

    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background: linear-gradient(135deg, #f5ebe0 0%, #e3d5ca 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

    .signup-container {
        max-width: 700px;
        width: 100%;
    }

    .signup-card {
        background: var(--card-bg);
        border-radius: 24px;
        padding: 3rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

    .progress-steps {
        display: flex;
        justify-content: space-between;
        margin-bottom: 3rem;
        position: relative;
    }

    .progress-steps::before {
        content: '';
        position: absolute;
        top: 20px;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--border);
        z-index: 0;
    }

    .progress-bar-fill {
        position: absolute;
        top: 20px;
        left: 0;
        height: 4px;
        background: var(--primary);
        z-index: 1;
        transition: width 0.3s ease;
    }

    .step {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        z-index: 2;
    }

    .step-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: var(--border);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        color: var(--text-light);
        margin-bottom: 0.5rem;
        transition: all 0.3s;
    }

    .step.active .step-circle {
        background: var(--primary);
        color: white;
        transform: scale(1.1);
    }

    .step.completed .step-circle {
        background: var(--primary);
        color: white;
    }

    .step-label {
        font-size: 0.75rem;
        color: var(--text-light);
        font-weight: 600;
    }

    .form-step {
        display: none;
    }

    .form-step.active {
        display: block;
    }

    .form-label {
        font-weight: 600;
        color: var(--text);
        margin-bottom: 0.5rem;
    }

    .form-control {
        border-radius: 16px;
        border: 1px solid var(--border);
        padding: 0.75rem 1rem;
        transition: all 0.2s;
    }

    .form-control:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 0.2rem rgba(144, 180, 148, 0.25);
    }

    .btn {
        border-radius: 20px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: var(--primary);
        border: none;
        color: white;
        box-shadow: 0 4px 12px rgba(144, 180, 148, 0.3);
    }

    .btn-primary:hover {
        background: var(--primary-dark);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(144, 180, 148, 0.4);
    }

    .btn-outline-secondary {
        border: 2px solid var(--border);
        color: var(--text);
        background: transparent;
    }

    .btn-outline-secondary:hover {
        background: var(--bg);
        border-color: var(--primary);
    }

    .alert {
        border-radius: 16px;
        border: none;
    }

    .card {
        border-radius: 16px;
        border: 1px solid var(--border);
    }

    h2 {
        color: var(--text);
        margin-bottom: 0.5rem;
    }

    .text-muted {
        color: var(--text-light) !important;
    }

    .org-option {
        padding: 1rem;
        border: 2px solid var(--border);
        border-radius: 16px;
        cursor: pointer;
        transition: all 0.2s;
        margin-bottom: 1rem;
    }

    .org-option:hover {
        border-color: var(--primary);
        background: rgba(144, 180, 148, 0.05);
    }

    .org-option.selected {
        border-color: var(--primary);
        background: rgba(144, 180, 148, 0.1);
    }

    .new-org-form {
        display: none;
        padding: 1.5rem;
        background: var(--bg);
        border-radius: 16px;
        margin-top: 1rem;
    }

    .new-org-form.active {
        display: block;
    }
</style>

<div class="signup-container">
    <div class="signup-card">
        <div class="text-center mb-4">
            <h2>Create Organizer Account</h2>
            <p class="text-muted">Join as an event organizer to create and manage campus events</p>
        </div>

        <!-- Approval Notice -->
        <div class="alert alert-warning mb-4"
            style="background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(230, 180, 34, 0.1) 100%); border: 2px solid #ffc107; border-radius: 16px;">
            <div class="d-flex align-items-center">
                <i class="bi bi-shield-check fs-3 me-3" style="color: #ffc107;"></i>
                <div>
                    <h6 class="mb-1" style="color: #856404;">⚠️ Admin Approval Required</h6>
                    <p class="mb-0 small" style="color: #856404;">
                        Your organizer account will be <strong>pending approval</strong> after registration.
                        You'll be notified once an administrator approves your account. This helps ensure event quality
                        and safety.
                    </p>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger mb-4">@Model.ErrorMessage</div>
        }

        <!-- Progress Steps -->
        <div class="progress-steps">
            <div class="progress-bar-fill" id="progressBar"></div>
            <div class="step active" data-step="1">
                <div class="step-circle">1</div>
                <div class="step-label">Account</div>
            </div>
            <div class="step" data-step="2">
                <div class="step-circle">2</div>
                <div class="step-label">Organization</div>
            </div>
            <div class="step" data-step="3">
                <div class="step-circle">3</div>
                <div class="step-label">Details</div>
            </div>
            <div class="step" data-step="4">
                <div class="step-circle">4</div>
                <div class="step-label">Complete</div>
            </div>
        </div>

        <form method="post" id="signupForm">
            <!-- Step 1: Account Info -->
            <div class="form-step active" data-step="1">
                <h4 class="mb-4">Account Information</h4>
                <div class="mb-3">
                    <label for="name" class="form-label">Full Name <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="name" asp-for="Name" required
                        placeholder="e.g., Jane Smith">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="email" asp-for="Email" required
                        placeholder="your.email@concordia.ca">
                </div>
                <div class="mb-4">
                    <label for="password" class="form-label">Password <span class="text-danger">*</span></label>
                    <input type="password" class="form-control" id="password" asp-for="Password" required minlength="6"
                        placeholder="At least 6 characters">
                </div>
                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-primary" onclick="nextStep()">Next <i
                            class="bi bi-arrow-right"></i></button>
                    <a href="/Login" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </div>

            <!-- Step 2: Organization Selection -->
            <div class="form-step" data-step="2">
                <h4 class="mb-4">Select Your Organization</h4>
                <p class="text-muted mb-3">Choose an existing organization or create a new one</p>

                @if (Model.Organizations.Any())
                {
                    <div class="mb-3">
                        @foreach (var org in Model.Organizations)
                        {
                            <div class="org-option" onclick="selectOrg(@org.Id, '@org.Name')">
                                <div class="d-flex align-items-center">
                                    <input type="radio" name="OrganizationId" value="@org.Id" id="org-@org.Id" class="me-3">
                                    <div>
                                        <strong>@org.Name</strong>
                                        @if (!string.IsNullOrEmpty(org.Description))
                                        {
                                            <p class="text-muted small mb-0">@org.Description</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }

                <div class="org-option" onclick="selectNewOrg()">
                    <div class="d-flex align-items-center">
                        <input type="radio" name="OrganizationId" value="0" id="org-new" class="me-3">
                        <div>
                            <strong><i class="bi bi-plus-circle"></i> Create New Organization</strong>
                            <p class="text-muted small mb-0">Start a new campus organization</p>
                        </div>
                    </div>
                </div>

                <div class="new-org-form" id="newOrgForm">
                    <h5 class="mb-3">New Organization Details</h5>
                    <div class="mb-3">
                        <label for="newOrgName" class="form-label">Organization Name <span
                                class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="newOrgName" maxlength="300"
                            asp-for="NewOrganizationName" placeholder="e.g., Computer Science Society">
                    </div>
                    <div class="mb-3">
                        <label for="newOrgDesc" class="form-label">Description</label>
                        <textarea class="form-control" id="newOrgDesc" maxlength="2000"
                            asp-for="NewOrganizationDescription" rows="3"
                            placeholder="Brief description of your organization"></textarea>
                    </div>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="button" class="btn btn-outline-secondary" onclick="prevStep()"><i
                            class="bi bi-arrow-left"></i> Back</button>
                    <button type="button" class="btn btn-primary" onclick="nextStep()">Next <i
                            class="bi bi-arrow-right"></i></button>
                </div>
            </div>

            <!-- Step 3: Organizer Details -->
            <div class="form-step" data-step="3">
                <h4 class="mb-4">Your Role & Information</h4>
                <div class="mb-3">
                    <label for="position" class="form-label">Position <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="position" asp-for="Position" required
                        placeholder="e.g., President, Event Coordinator">
                </div>
                <div class="mb-3">
                    <label for="department" class="form-label">Department <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="department" asp-for="Department" required
                        placeholder="e.g., Computer Science, Engineering">
                </div>
                <div class="mb-4">
                    <label for="phone" class="form-label">Phone Number <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="phone" asp-for="PhoneNumber" required
                        title="Phone number must be exactly 10 digits (no spaces or special characters)"
                        placeholder="e.g., 5141234567">
                    <div class="form-text">Enter 10 digits only (e.g., 5141234567)</div>
                </div>
                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-outline-secondary" onclick="prevStep()"><i
                            class="bi bi-arrow-left"></i> Back</button>
                    <button type="button" class="btn btn-primary" onclick="nextStep()">Next <i
                            class="bi bi-arrow-right"></i></button>
                </div>
            </div>

            <!-- Step 4: Review & Submit -->
            <div class="form-step" data-step="4">
                <h4 class="mb-4">Review Your Information</h4>
                <div class="card mb-3">
                    <div class="card-body">
                        <h6 class="text-muted mb-3">Account Details</h6>
                        <p class="mb-2"><strong>Name:</strong> <span id="review-name"></span></p>
                        <p class="mb-2"><strong>Email:</strong> <span id="review-email"></span></p>

                        <h6 class="text-muted mt-4 mb-3">Organization</h6>
                        <p class="mb-2"><strong>Organization:</strong> <span id="review-org"></span></p>

                        <h6 class="text-muted mt-4 mb-3">Your Role</h6>
                        <p class="mb-2"><strong>Position:</strong> <span id="review-position"></span></p>
                        <p class="mb-2"><strong>Department:</strong> <span id="review-department"></span></p>
                        <p class="mb-0"><strong>Phone:</strong> <span id="review-phone"></span></p>
                    </div>
                </div>
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> <strong>Approval Required:</strong> Your account will be
                    pending admin approval. You'll receive an email once approved.
                </div>
                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-outline-secondary" onclick="prevStep()"><i
                            class="bi bi-arrow-left"></i> Back</button>
                    <button type="submit" class="btn btn-primary">Create Account <i
                            class="bi bi-check-circle"></i></button>
                </div>
            </div>
        </form>

        <p class="text-center mt-4 mb-0">
            Already have an account? <a href="/Login" style="color: var(--primary); font-weight: 600;">Log in</a>
        </p>
    </div>
</div>

@section Scripts {
    <script>

        $('#newOrgName').bind('input propertychange', function () {
            if (this.value.length == 300) {
                alert("You have reached the maximum amount characters");
            }
        });

        $('#newOrgDesc').bind('input propertychange', function () {
            if (this.value.length == 2000) {
                alert("You have reached the maximum amount characters");
            }
        });
        let currentStep = 1;
        const totalSteps = 4;
        let selectedOrgName = '';

        function updateProgress() {
            const progressBar = document.getElementById('progressBar');
            const percentage = ((currentStep - 1) / (totalSteps - 1)) * 100;
            progressBar.style.width = percentage + '%';

            document.querySelectorAll('.step').forEach((step, index) => {
                const stepNumber = index + 1;
                if (stepNumber < currentStep) {
                    step.classList.add('completed');
                    step.classList.remove('active');
                } else if (stepNumber === currentStep) {
                    step.classList.add('active');
                    step.classList.remove('completed');
                } else {
                    step.classList.remove('active', 'completed');
                }
            });

            document.querySelectorAll('.form-step').forEach(step => {
                step.classList.remove('active');
            });
            document.querySelector(`.form-step[data-step="${currentStep}"]`).classList.add('active');

            if (currentStep === 4) {
                updateReview();
            }
        }

        function selectOrg(orgId, orgName) {
            document.querySelectorAll('.org-option').forEach(opt => opt.classList.remove('selected'));
            event.currentTarget.classList.add('selected');
            document.getElementById('org-' + orgId).checked = true;
            document.getElementById('newOrgForm').classList.remove('active');
            selectedOrgName = orgName;
        }

        function selectNewOrg() {
            document.querySelectorAll('.org-option').forEach(opt => opt.classList.remove('selected'));
            event.currentTarget.classList.add('selected');
            document.getElementById('org-new').checked = true;
            document.getElementById('newOrgForm').classList.add('active');
        }

        function updateReview() {
            document.getElementById('review-name').textContent = document.getElementById('name').value;
            document.getElementById('review-email').textContent = document.getElementById('email').value;

            const newOrgRadio = document.getElementById('org-new');
            if (newOrgRadio.checked) {
                document.getElementById('review-org').textContent = document.getElementById('newOrgName').value + ' (New)';
            } else {
                document.getElementById('review-org').textContent = selectedOrgName;
            }

            document.getElementById('review-position').textContent = document.getElementById('position').value;
            document.getElementById('review-department').textContent = document.getElementById('department').value;
            document.getElementById('review-phone').textContent = document.getElementById('phone').value;
        }

        function nextStep() {
            const currentStepEl = document.querySelector(`.form-step[data-step="${currentStep}"]`);
            const inputs = currentStepEl.querySelectorAll('input[required]:not([type="radio"])');
            let valid = true;

            // Special validation for step 2 (organization selection)
            if (currentStep === 2) {
                const orgSelected = document.querySelector('input[name="OrganizationId"]:checked');
                if (!orgSelected) {
                    alert('Please select an organization');
                    return;
                }
                if (orgSelected.value === '0') {
                    const newOrgName = document.getElementById('newOrgName').value;
                    if (!newOrgName) {
                        alert('Please enter organization name');
                        return;
                    }
                }
            } else {
                inputs.forEach(input => {
                    if (!input.value) {
                        input.classList.add('is-invalid');
                        valid = false;
                    } else {
                        input.classList.remove('is-invalid');
                    }
                });
                if (!valid) return;
            }

            if (currentStep < totalSteps) {
                currentStep++;
                updateProgress();
            }
        }

        function prevStep() {
            if (currentStep > 1) {
                currentStep--;
                updateProgress();
            }
        }

        updateProgress();
    </script>
}