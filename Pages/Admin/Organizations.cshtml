@page
@model OrganizationsModel
@{
    ViewData["Title"] = "Organization Management";
    Layout = "_AdminLayout";
}

<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-building"></i> Organization Management</h1>
        <a href="/Admin/Home" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back to Dashboard</a>
    </div>

    @if (Model.Message != null)
    {
        <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Create Organization Form -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Create Organization</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="Create">
                        <div class="mb-3">
                            <label for="name" class="form-label">Organization Name *</label>
                            <input type="text" class="form-control" id="name" asp-for="Name" required>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" asp-for="Description" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-plus-circle"></i> Create Organization
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Organizations List -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">All Organizations (@Model.Organizations.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Organizations.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Events</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var org in Model.Organizations)
                                    {
                                        <tr>
                                            <td>@org.Id</td>
                                            <td><strong>@org.Name</strong></td>
                                            <td>
                                                @if (!string.IsNullOrWhiteSpace(org.Description))
                                                {
                                                    <span>@(org.Description.Length > 50 ? org.Description.Substring(0, 50) + "..." : org.Description)</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted fst-italic">No description</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@org.Events.Count events</span>
                                            </td>
                                            <td>
                                                @if (org.Events.Any())
                                                {
                                                    <span class="badge bg-warning text-dark"
                                                          title="Cannot delete: this organization has @org.Events.Count event(s)"
                                                          style="cursor: help; padding: 0.5rem 0.75rem; font-size: 0.875rem;">
                                                        <i class="bi bi-exclamation-triangle"></i> Has Events
                                                    </span>
                                                }
                                                else
                                                {
                                                    <form method="post" asp-page-handler="Delete" asp-route-id="@org.Id" class="d-inline"
                                                          onsubmit="return confirm('Are you sure you want to delete @org.Name? This action cannot be undone.');">
                                                        <button type="submit" class="btn btn-danger btn-sm">
                                                            <i class="bi bi-trash"></i> Delete
                                                        </button>
                                                    </form>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center p-4 text-muted">
                            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                            <p class="mt-2">No organizations yet</p>
                            <p class="small">Create your first organization using the form on the left</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Organizations Details -->
            @if (Model.Organizations.Any())
            {
                <div class="row g-3 mt-3">
                    @foreach (var org in Model.Organizations)
                    {
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="card-title"><i class="bi bi-building"></i> @org.Name</h6>
                                    <p class="card-text small text-muted">
                                        @if (!string.IsNullOrWhiteSpace(org.Description))
                                        {
                                            @org.Description
                                        }
                                        else
                                        {
                                            <span class="fst-italic">No description provided</span>
                                        }
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="badge bg-primary">@org.Events.Count Events</span>
                                        <small class="text-muted">ID: @org.Id</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
