@page
@model AdminHomeModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <h1>Admin Dashboard</h1>
    <p class="lead">Manage platform and moderate content</p>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Approve Organizers</h5>
                    <p class="card-text">Review organizer account requests</p>
                    <a href="/Admin/ApproveOrganizers" class="btn btn-primary">Approve Accounts</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Moderate Events</h5>
                    <p class="card-text">Review and approve events</p>
                    <a href="/Admin/ModerateEvents" class="btn btn-primary">Moderate Events</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Platform Analytics</h5>
                    <p class="card-text">View global statistics</p>
                    <a href="/Admin/Analytics" class="btn btn-primary">View Analytics</a>
                </div>
            </div>
        </div>
    </div>
</div>
