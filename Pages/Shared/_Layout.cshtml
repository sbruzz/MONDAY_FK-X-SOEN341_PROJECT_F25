<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CampusEvents</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CampusEvents.styles.css" asp-append-version="true" />
</head>
<body style="margin: 0; padding: 0; min-height: 100vh; display: flex; flex-direction: column;">
    <header style="margin: 0; padding: 0;">
        <nav class="navbar navbar-expand-lg navbar-light" style="background: #f5ebe0; padding: 1.25rem 5%; margin: 0;">
            <div class="container-fluid" style="padding: 0; max-width: 100%;">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index" style="color: #3d3d3d; font-size: 1.5rem;">CampusEvents</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ms-4">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold" asp-area="" asp-page="/Index">Home</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn" asp-area="" asp-page="/Login" style="background: #d5bdaf; color: white; font-weight: 600; border-radius: 10px; padding: 0.625rem 2rem; transition: all 0.3s ease;">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" style="padding: 0; margin: 0; flex: 1;">
        @RenderBody()
    </main>

    <footer style="background: #edede9; padding: 4rem 5% 2rem; margin: 0; width: 100%; border-top: 1px solid #d6ccc2;">
        <div style="max-width: 1400px; margin: 0 auto;">
            <div style="display: grid; grid-template-columns: 2fr 1fr 1fr 1fr; gap: 3rem; margin-bottom: 3rem;">
                <!-- Brand Column -->
                <div>
                    <h3 style="font-size: 1.5rem; font-weight: 800; color: #3d3d3d; margin-bottom: 1rem;">CampusEvents</h3>
                    <p style="color: #6b6b6b; line-height: 1.6; margin-bottom: 1.5rem;">The complete platform for discovering, organizing, and managing campus events.</p>
                </div>

                <!-- Product Column -->
                <div>
                    <h4 style="font-size: 0.875rem; font-weight: 700; color: #3d3d3d; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 1rem;">Product</h4>
                    <ul style="list-style: none; padding: 0; margin: 0;">
                        <li style="margin-bottom: 0.75rem;"><a asp-area="" asp-page="/Index" style="color: #6b6b6b; text-decoration: none; transition: color 0.3s;">Home</a></li>
                        <li style="margin-bottom: 0.75rem;"><a asp-area="" asp-page="/About" style="color: #6b6b6b; text-decoration: none; transition: color 0.3s;">About Us</a></li>
                        <li style="margin-bottom: 0.75rem;"><a asp-area="" asp-page="/Contact" style="color: #6b6b6b; text-decoration: none; transition: color 0.3s;">Contact</a></li>
                    </ul>
                </div>

                <!-- Legal Column -->
                <div>
                    <h4 style="font-size: 0.875rem; font-weight: 700; color: #3d3d3d; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 1rem;">Legal</h4>
                    <ul style="list-style: none; padding: 0; margin: 0;">
                        <li style="margin-bottom: 0.75rem;"><a asp-area="" asp-page="/Privacy" style="color: #6b6b6b; text-decoration: none; transition: color 0.3s;">Privacy Policy</a></li>
                        <li style="margin-bottom: 0.75rem;"><a asp-area="" asp-page="/Terms" style="color: #6b6b6b; text-decoration: none; transition: color 0.3s;">Terms of Service</a></li>
                    </ul>
                </div>

                <!-- Resources Column -->
                <div>
                    <h4 style="font-size: 0.875rem; font-weight: 700; color: #3d3d3d; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 1rem;">Resources</h4>
                    <ul style="list-style: none; padding: 0; margin: 0;">
                        <li style="margin-bottom: 0.75rem;"><a asp-area="" asp-page="/Login" style="color: #6b6b6b; text-decoration: none; transition: color 0.3s;">Login</a></li>
                        <li style="margin-bottom: 0.75rem;"><a href="#" style="color: #6b6b6b; text-decoration: none; transition: color 0.3s;">Support</a></li>
                    </ul>
                </div>
            </div>

            <!-- Bottom Bar -->
            <div style="border-top: 1px solid #d6ccc2; padding-top: 2rem; text-align: center;">
                <p style="margin: 0; color: #6b6b6b; font-size: 0.875rem;">&copy; 2025 CampusEvents. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
