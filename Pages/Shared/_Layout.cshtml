<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CampusEvents</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CampusEvents.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body style="margin: 0; padding: 0; min-height: 100vh; display: flex; flex-direction: column;">
    <header class="site-header">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid" style="padding: 0; max-width: 1400px; margin: 0 auto;">
                <a class="site-logo" asp-area="" asp-page="/Index">
                    <i class="bi bi-calendar-event-fill"></i>
                    <span>CampusEvents</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="nav-center mx-auto">
                        <a class="nav-link-custom @(Context.Request.Path == "/" || Context.Request.Path == "/Index" ? "active" : "")" asp-area="" asp-page="/Index">Home</a>
                        <a class="nav-link-custom @(Context.Request.Path.StartsWithSegments("/Events") ? "active" : "")" asp-area="" asp-page="/Events">Browse Events</a>
                        <a class="nav-link-custom @(Context.Request.Path.StartsWithSegments("/About") ? "active" : "")" asp-area="" asp-page="/About">About</a>
                        <a class="nav-link-custom @(Context.Request.Path.StartsWithSegments("/FAQ") ? "active" : "")" asp-area="" asp-page="/FAQ">FAQ</a>
                        <a class="nav-link-custom @(Context.Request.Path.StartsWithSegments("/Privacy") ? "active" : "")" asp-area="" asp-page="/Privacy">Privacy</a>
                    </div>
                    <div class="nav-actions">
                        <a class="btn-login" asp-area="" asp-page="/Login">
                            <i class="bi bi-box-arrow-in-right"></i>
                            Login
                        </a>
                        <a class="btn-signup" asp-area="" asp-page="/Signup">
                            <i class="bi bi-person-plus-fill"></i>
                            Sign Up
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" style="padding: 0; margin: 0; flex: 1; margin-bottom: 0;">
        @RenderBody()
    </main>
    <div style="padding-bottom: 3rem;"></div>

    <footer style="background: #edede9; padding: 4rem 5% 2rem; margin: 0; width: 100%; border-top: 1px solid #d6ccc2;">
        <div style="max-width: 1400px; margin: 0 auto;">
            <div style="display: grid; grid-template-columns: 2fr 1fr 1fr 1fr; gap: 3rem; margin-bottom: 3rem;">
                <!-- Brand Column -->
                <div>
                    <h3 style="font-size: 1.5rem; font-weight: 800; color: #3d3d3d; margin-bottom: 1rem;">CampusEvents</h3>
                    <p style="color: #6b6b6b; line-height: 1.6; margin-bottom: 1.5rem;">The complete platform for discovering, organizing, and managing campus events.</p>
                </div>

                <!-- Product Column -->
                <div>
                    <h4 style="font-size: 0.875rem; font-weight: 700; color: #3d3d3d; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 1rem;">Product</h4>
                    <ul style="list-style: none; padding: 0; margin: 0;">
                        <li style="margin-bottom: 0.75rem;"><a asp-area="" asp-page="/Index" style="color: #6b6b6b; text-decoration: none; transition: color 0.3s;">Home</a></li>
                        <li style="margin-bottom: 0.75rem;"><a asp-area="" asp-page="/About" style="color: #6b6b6b; text-decoration: none; transition: color 0.3s;">About Us</a></li>
                        <li style="margin-bottom: 0.75rem;"><a asp-area="" asp-page="/FAQ" style="color: #6b6b6b; text-decoration: none; transition: color 0.3s;">FAQ</a></li>
                    </ul>
                </div>

                <!-- Legal Column -->
                <div>
                    <h4 style="font-size: 0.875rem; font-weight: 700; color: #3d3d3d; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 1rem;">Legal</h4>
                    <ul style="list-style: none; padding: 0; margin: 0;">
                        <li style="margin-bottom: 0.75rem;"><a asp-area="" asp-page="/Privacy" style="color: #6b6b6b; text-decoration: none; transition: color 0.3s;">Privacy Policy</a></li>
                    </ul>
                </div>

                <!-- Resources Column -->
                <div>
                    <h4 style="font-size: 0.875rem; font-weight: 700; color: #3d3d3d; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 1rem;">Resources</h4>
                    <ul style="list-style: none; padding: 0; margin: 0;">
                        <li style="margin-bottom: 0.75rem;"><a asp-area="" asp-page="/Login" style="color: #6b6b6b; text-decoration: none; transition: color 0.3s;">Login</a></li>
                        <li style="margin-bottom: 0.75rem;"><a asp-area="" asp-page="/Contact" style="color: #6b6b6b; text-decoration: none; transition: color 0.3s;">Contact Us</a></li>
                    </ul>
                </div>
            </div>

            <!-- Bottom Bar -->
            <div style="border-top: 1px solid #d6ccc2; padding-top: 2rem; text-align: center;">
                <p style="margin: 0; color: #6b6b6b; font-size: 0.875rem;">&copy; 2025 CampusEvents. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
